{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/transcend-io/cli/main/guardrails-policy-yml-schema.json",
  "title": "transcendAIProxyPolicy.yml",
  "description": "Define the schema for the the Transcend AI Proxy service.",
  "type": "object",
  "properties": {
    "enabledAIIntegrations": {
      "type": "object",
      "properties": {
        "openAI": {
          "type": "object",
          "required": ["enabledRoutes"],
          "properties": {
            "enabledRoutes": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["routeName", "enabledPolicies"],
                "properties": {
                  "routeName": {
                    "anyOf": [
                      {
                        "const": "/v1/chat/completions"
                      },
                      {
                        "const": "/v1/images/generations"
                      },
                      {
                        "const": "/v1/images/edits"
                      }
                    ]
                  },
                  "enabledPolicies": {
                    "type": "array",
                    "items": {
                      "const": "redactEmail"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
